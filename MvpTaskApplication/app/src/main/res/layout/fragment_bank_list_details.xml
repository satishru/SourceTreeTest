<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/account_details_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="One"
        android:padding="@dimen/common_padding"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/account_details_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Two"
        android:padding="@dimen/common_padding"
        app:layout_constraintTop_toBottomOf="@+id/account_details_name"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/account_details_frost_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Last"
        android:padding="@dimen/common_padding"
        app:layout_constraintTop_toBottomOf="@+id/account_details_amount"
        app:layout_constraintVertical_chainStyle="packed"  />


</android.support.constraint.ConstraintLayout>